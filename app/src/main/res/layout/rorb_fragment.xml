<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Pull down to refresh"
            android:layout_centerHorizontal="true"
            android:layout_width="105dp"
            android:layout_height="wrap_content" android:id="@+id/pullToRefreshText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" android:layout_alignTop="@+id/pullToRefresh"
            android:layout_marginTop="0dp" android:textStyle="italic" android:visibility="invisible"/>
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rorb_text" android:textSize="24sp"
                    android:layout_centerInParent="true" android:textColor="@color/white"
                    android:textAlignment="center"/>

        </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
